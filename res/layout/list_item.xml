<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="4dp" >

    <ImageView
        android:id="@+id/pictureName"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_margin="10dp"
        
       
        android:layout_gravity="center_vertical"
      	
        android:gravity="center_vertical"
      	android:scaleType="centerCrop"
        android:src="@drawable/qibohuixie" />

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        
       
     
        android:layout_marginRight="10dp"
       
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical"
    	android:orientation="vertical" 
    	android:layout_margin="10dp" >

        <TextView
            android:id="@+id/shangPinMingXi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lines="2"
            android:ellipsize="end"
	        android:textSize="15sp"
	        android:textColor="#454545"
            android:text="@string/shangpinmingxi" />

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="match_parent"
          
            android:layout_height="wrap_content" 
            android:layout_marginTop="6dp"
            android:layout_marginBottom="6dp">

            <TextView
                android:id="@+id/shangPinNewPrice"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
		        android:textSize="15sp"
		        android:textColor="#ca0607"
                android:text="@string/shangpinnewprice" />

            
            <RelativeLayout 
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                 android:layout_marginLeft="10dp"
                 	android:layout_weight="1"
                 	android:id="@+id/layout_oldprice"
                
                >
                 <TextView
                android:id="@+id/shangPinOldPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
               
		      
		        android:textColor="#cfced3"
		        android:layout_centerVertical="true"
                android:text="@string/shangpinoldprice" />
                <View 
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"
                    android:layout_alignLeft="@+id/shangPinOldPrice"
                    android:layout_alignRight="@+id/shangPinOldPrice"
                    android:background="@color/base_gray"
                      android:layout_centerVertical="true"
                    />
                
            </RelativeLayout>
           

        </LinearLayout>
        

	    <TextView
	        android:id="@+id/yaoYiYao"
	        android:background="#00000000"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="0dp"
	        android:gravity="left"
	        android:textSize="15sp"
	        android:textColor="#ff687d"
	        android:text="摇一摇  再减  ？ %" />
    </LinearLayout>
</LinearLayout>