<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
     >
    

    
    <include layout="@layout/base_title"/>
    
 <RelativeLayout 
     android:id="@+id/wodegouliang_layout_detail"
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     
     android:gravity="center_vertical"
     android:paddingTop="5dp"
     android:paddingBottom="5dp"
     android:clickable="true"
     >
     
     <ImageView 
         android:id="@+id/wodegouliang_imv_shengyu"
         android:layout_width="35dp"
         android:layout_height="35dp" 
         android:src="@drawable/shuangdian"
         android:layout_marginLeft="10dp"
         android:layout_marginTop="5dp"
         android:layout_marginBottom="5dp"
           android:layout_centerVertical="true"
         />
     
     <TextView
           android:id="@+id/wodegouliang_tv_shengyu"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="剩余狗粮"
         android:layout_toRightOf="@+id/wodegouliang_imv_shengyu"
         android:layout_marginLeft="10dp"
         android:layout_centerVertical="true"
         android:textSize="18sp"
         
         />
     
     
     	<TextView
     	      android:id="@+id/wodegouliang_tv_shengyu_content"
     	    android:layout_width="wrap_content"
     	    android:layout_height="wrap_content"
     	    android:text="text"
     	   android:layout_alignParentRight="true"
     	   android:layout_marginRight="60dp"
     	     android:layout_centerVertical="true"
     	    />
     
 </RelativeLayout>
    
    
    <View
        
        android:layout_width="match_parent"
        android:layout_height="0.8dp"
        android:background="@color/base_bg_gray"
        android:layout_marginLeft="55dp"
        />
     <RelativeLayout 
         
     android:id="@+id/wodegouliang_chongzhi"
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     
     android:gravity="center_vertical"
     android:paddingTop="5dp"
     android:paddingBottom="5dp"
     android:clickable="true"
         android:background="@drawable/base_layout_selector"
     >
     
     <ImageView 
         android:id="@+id/wodegouliang_imv_chongzhi"
         android:layout_width="35dp"
         android:layout_height="35dp" 
         android:src="@drawable/shenqingchengweishangjia"
         android:layout_marginLeft="10dp"
         android:layout_marginTop="5dp"
         android:layout_marginBottom="5dp"
           android:layout_centerVertical="true"
         />
     
     <TextView
           android:id="@+id/wodegouliang_tv_chongzhi"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="狗粮充值"
         android:layout_toRightOf="@+id/wodegouliang_imv_chongzhi"
         android:layout_marginLeft="10dp"
         android:layout_centerVertical="true"
         android:textSize="18sp"
         
         />
     
     
     	<ImageView
     	      android:id="@+id/wodegouliang_imv_chongzhi_guid"
     	    android:layout_width="wrap_content"
     	    android:layout_height="wrap_content"
     	    android:text="text"
     	   android:layout_alignParentRight="true"
     	   android:layout_marginRight="20dp"
     	     android:layout_centerVertical="true"
     	     android:src="@drawable/ic_arrow"
     	    />
     
 </RelativeLayout>
    <View
        
        android:layout_width="match_parent"
        android:layout_height="0.8dp"
        android:background="@color/base_bg_gray"
        android:layout_marginLeft="55dp"
        />
</LinearLayout>