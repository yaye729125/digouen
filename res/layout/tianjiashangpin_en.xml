<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <include

        layout="@layout/base_title" />

    <ScrollView android:layout_width="match_parent"
        android:layout_height="match_parent">
    
       <LinearLayout 
           
           android:layout_width="match_parent"
       	 android:layout_height="wrap_content"
        android:orientation="vertical"
           >
    
   <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
       android:id="@+id/tupian_shangchuang"
        android:gravity="center_vertical"
        android:background="@color/half_trans_gray"
        android:visibility="gone"
        android:orientation="horizontal" >
      
        <ImageView 
            
            android:id="@+id/tupian_button"
            android:layout_width="65dp"
            android:layout_height="65dp"
            
          
            android:layout_marginLeft="10dp"
            android:src="@drawable/addgoods"/>
        
    <HorizontalScrollView android:layout_width="0dp"
        android:layout_weight="5"
        android:layout_height="80dp">
        <LinearLayout android:layout_width="0dp"
            android:layout_height="80dp" 
            android:id="@+id/photo_image" 
            android:orientation="horizontal"
            >
           
   
        </LinearLayout>
        </HorizontalScrollView>    
        
      
    </LinearLayout>
    
   
   <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        
        android:gravity="center_vertical"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="1"
             android:focusable="true"
             android:focusableInTouchMode="true"
            android:orientation="horizontal" >

            <TextView
                 android:gravity="center_vertical"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:paddingLeft="12dp"
                android:text="标题:" />

            <EditText
                 android:gravity="center_vertical"
                android:layout_width="0dp"
                android:id="@+id/tianjia_title"
                android:layout_height="50dp"
                android:layout_weight="6"
                android:textSize="15sp"
                android:background="@null"
                
                android:hint="请输入商品标题(必填)" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
             android:layout_marginLeft="12dp"
             android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:background="#cccccc" />

        <TextView
             android:gravity="center_vertical|bottom"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_weight="1"
           android:paddingBottom="5dp"
            android:paddingLeft="12dp"
            android:text="商品描述:" />

        <EditText
             android:gravity="start"
            android:layout_width="match_parent"
            android:layout_height="80dp"
           android:id="@+id/tianjia_miaoshu"
            android:layout_weight="1"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:padding="8dp"
             android:textSize="15sp"
            android:hint="请输入商品描述"
            android:background="@drawable/base_edittext_selector" 
           />
    </LinearLayout>
   
   
   
   <LinearLayout
        
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <TextView
                android:gravity="center_vertical"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="2"
                android:paddingLeft="12dp"
                android:text="商品品牌:" />

            <EditText
                 android:gravity="center_vertical"
                android:layout_width="0dp"
                android:id="@+id/tianjia_pingpai"
                android:layout_height="50dp"
                android:layout_weight="6"
                 android:textSize="15sp"
              
                android:background="@null"
                android:hint="请输入商品品牌" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="5dp"
             android:layout_marginRight="5dp"
         android:background="#cccccc" />
         <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="0dp"
                android:layout_height="50dp"
                 android:gravity="center_vertical"
                android:layout_weight="2"
                android:paddingLeft="12dp"
                android:text="条形码:" />

            <EditText
                 android:gravity="center_vertical"
                android:layout_width="0dp"
                android:id="@+id/tianjia_tiaoxingma"
                android:layout_height="50dp"
                android:layout_weight="6"
                android:background="@null"
                 android:textSize="15sp"
                android:hint="请输入商品条形码(区分大小写)(必填)" />
        </LinearLayout>
         <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="5dp"
             android:layout_marginRight="5dp"
            android:layout_weight="1"
             android:textSize="15sp"
            android:background="#cccccc" />
         
         
          <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <TextView
                 android:gravity="center_vertical"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="2"
                android:paddingLeft="12dp"
                android:text="商品分类:" />

            
            
            <LinearLayout
                
                 android:layout_width="0dp"
                android:layout_height="50dp"
               
               
             	android:gravity="center_vertical"
               
                android:layout_weight="6"
                 >
            <Button 
              	android:id="@+id/fenlei_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
               	android:paddingTop="10dp"
               	android:paddingBottom="10dp"
               	android:paddingLeft="30dp"
               	android:paddingRight="30dp"
                android:button="@null"
                android:gravity="center"
                android:textColor="@color/white"
                android:background="@drawable/item_detail_bottom_layout_addcart_selector"
                android:text="选择分类"/>
            </LinearLayout>
        </LinearLayout>
         <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="5dp"
             android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:background="#cccccc" />
       
    </LinearLayout>
   
   
   
   <LinearLayout
        
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal" >

            <TextView
                android:gravity="center_vertical"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="2"
                android:paddingLeft="12dp"
                android:text="规格名1:" />

            <EditText
                 android:gravity="center_vertical"
                android:layout_width="0dp"
                android:id="@+id/tianjia_guigeming1"
                android:layout_height="50dp"
                android:layout_weight="6"
                android:background="@null"
                 android:textSize="15sp"
                android:hint="比如:颜色、@尺寸 等(必填)" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="5dp"
             android:layout_marginRight="5dp"
         android:background="#cccccc" />
         <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="0dp"
                android:layout_height="50dp"
                 android:gravity="center_vertical"
                android:layout_weight="2"
                android:paddingLeft="12dp"
                android:text="规格名2:" />

            <EditText
                 android:gravity="center_vertical"
                android:layout_width="0dp"
                android:id="@+id/tianjia_guigeming2"
                android:layout_height="50dp"
                android:layout_weight="6"
                android:background="@null"
                 android:textSize="15sp"
                android:hint="比如:颜色、@尺寸 等(可选)"  />
        </LinearLayout>
         <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_weight="1"
            android:layout_marginLeft="5dp"
             android:layout_marginRight="5dp"
            android:background="#cccccc" />
       
   </LinearLayout>
   
   <ListView
       android:id="@+id/tianjiashangpin_list"
       android:layout_width="match_parent"
       android:layout_height="wrap_content" >
         
       
       
	</ListView>
   
    
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="#ffffff"
            android:orientation="horizontal" >

            <RadioButton android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/tianjia_shuxing"
                android:text="添加属性"
                android:button="@null"
                android:drawableLeft="@drawable/ic_launcher"/>
             
        </LinearLayout>
        
         <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_weight="1"
            android:layout_marginLeft="5dp"
             android:layout_marginRight="5dp"
            android:background="#cccccc" />
    
    
    
    
    <LinearLayout
        
        android:layout_width="match_parent"
        android:layout_height="101dp"
        android:background="#ffffff"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical"
        android:layout_marginBottom="10dp"
        android:orientation="vertical" >
         
        <CheckBox android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/shangjia_check"
            android:text="直接上架"
            android:gravity="center_vertical"
           />
         <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_weight="1"
            android:background="#cccccc" />
        <CheckBox android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/tuijian_check"
            android:text="添加到推荐"
            android:gravity="center_vertical"
           />
        
        
        
        

      
       
   </LinearLayout>
   
   </LinearLayout>
   </ScrollView>
   
</LinearLayout>