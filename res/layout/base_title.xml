<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="@color/title_gray"
     >
    
    
    <LinearLayout 
        android:layout_width="50dp"
        android:layout_height="match_parent"
       	android:layout_alignParentLeft="true"
       	android:background="@drawable/title_layout_selector"
       	android:clickable="true"
       	>
    <ImageView
         android:id="@+id/base_title_back"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/title_back_icon"
      
        android:layout_margin="10dp"
        />
    </LinearLayout>
    
    
    
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="title"
        android:textSize="18sp"
        android:textColor="@color/white"
        
        />
    
    <LinearLayout 
        android:layout_width="50dp"
        android:layout_height="match_parent"
          	android:layout_alignParentRight="true"
          		android:background="@drawable/title_layout_selector"
          		  	android:clickable="true">
    <ImageView
        android:id="@+id/base_title_option"
         android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/wallet_progress_loading_01"
     
        android:layout_margin="10dp"
        />
</LinearLayout>
</RelativeLayout>