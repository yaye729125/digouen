<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="@color/transparent"
     >
    
    
    <LinearLayout 
        
        android:id="@+id/itemdetail_layout_title_back"
        android:layout_width="50dp"
        android:layout_height="match_parent"
       	android:layout_alignParentLeft="true"

       	android:clickable="true"
       	>
    <ImageView
         android:id="@+id/itemdetail_title_back"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/back_guid"
      
        android:layout_margin="10dp"
        />
    </LinearLayout>
    
    
    
    <TextView
        android:id="@+id/itemdetail_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="title"
        android:textSize="18sp"
        android:textColor="@color/white"
        
        />
    
    <LinearLayout 
         android:id="@+id/itemdetail_layout_title_option"
        android:layout_width="50dp"
        android:layout_height="match_parent"
          	android:layout_alignParentRight="true"
          	
          		  	android:clickable="true">
    <ImageView
        android:id="@+id/itemdetail_title_option"
         android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/option_guid"
     
        android:layout_margin="10dp"
        />
</LinearLayout>
</RelativeLayout>