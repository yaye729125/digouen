             android:layout_weight="1"
            android:button="@null"
            android:id="@+id/zhuce"
            android:textColor="@color/btn_blue_textcolor_selector"
           
            android:gravity="center"
            android:layout_margin="10dp"
         
            android:text="短信快捷注册"/>
        <RadioButton android:layout_width="0dp"
