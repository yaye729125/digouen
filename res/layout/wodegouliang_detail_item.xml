<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:paddingLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:orientation="horizontal" >

        <TextView
            android:layout_weight="0.3"
            android:id="@+id/wodegouliang_detail_item_tv_target_id"
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="李勇" />

        <TextView
             android:layout_weight="0.6"
             android:ellipsize="middle"
            android:id="@+id/wodegouliang_detail_item_tv_point"
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="13882801234" />

        <TextView
             android:layout_weight="2"
            android:id="@+id/wodegouliang_detail_item_tv_time"
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="610012"
            android:textColor="@color/base_gray" />
        
    </LinearLayout>
    
    
    
     <LinearLayout
        android:paddingLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:gravity="right"
        android:orientation="horizontal" >
    <ImageView android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingRight="5dp"
        android:src="@drawable/ic_arrow"/>
    
    
    </LinearLayout>
    
    
    
    
    
      <LinearLayout
        android:paddingLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:orientation="horizontal" >
        
         <TextView android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:text="温江区光华大道三段1819号"
             android:id="@+id/wodegouliang_detail_item_tv_memo"
             android:gravity="center_vertical"
             
             android:textColor="@color/base_gray"/> 
          
         
    </LinearLayout>
    
    
    
    
    
    

</LinearLayout>
