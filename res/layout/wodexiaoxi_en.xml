<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white" >
    

    <include layout="@layout/title_onlyback"/>
    
    
    
    
    <RadioGroup 
        android:id="@+id/wodexiaoxi_radiogroup"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        
        >
        
        <RadioButton 
            android:id="@+id/wodexiaoxi_radiobtn_newpm"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="未读消息"
            android:button="@null"
           	style="@style/main_bottom_radoibtn"
         	android:gravity="center"
         	android:background="@drawable/select1" 
            android:textColor="@color/color_radiobutton"
            android:checked="true"
            android:textSize="13sp"
            />
         <RadioButton 
             android:id="@+id/wodexiaoxi_radiobtn_privatepm"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="-2dp"
            android:layout_marginRight="-2dp"
            android:text="私人消息"
             android:button="@null"
           	 style="@style/main_bottom_radoibtn"
         android:gravity="center"
         android:background="@drawable/select3" 
             android:textSize="13sp"
            android:textColor="@color/color_radiobutton"
            />
          <RadioButton 
              android:id="@+id/wodexiaoxi_radiobtn_syspm"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="系统消息"
             android:button="@null"
          	 style="@style/main_bottom_radoibtn"
         android:gravity="center"
         android:background="@drawable/select2" 
             android:textSize="13sp"
            android:textColor="@color/color_radiobutton"
           
            />
        
        
    </RadioGroup>
    
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
          android:layout_marginTop="8dp"
        android:background="@color/base_bg_gray"
        />
    <ListView 
        
        android:id="@+id/wodexiaoxi_list"
      
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        
         android:listSelector="@drawable/listselector" />
    
</LinearLayout>