                   /> 
                
                <ImageView 
                    android:layout_width="0dp"
                    android:src="@drawable/ic_arrow"
                  	android:layout_weight="1"
                    android:layout_height="wrap_content"
                    />
                
                
                
            </LinearLayout>
            
            
            <TextView android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/shuliang"
