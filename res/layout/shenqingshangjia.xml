              android:textColorHint="@color/base_bg_gray"
              android:hint="请输入开店人联系方式"
            android:ems="10" >

        </EditText>
          </LinearLayout>
          
     <TextView android:layout_width="match_parent"
            android:layout_marginLeft="12dp"
