<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    
    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#7c7c7c" >

        <RadioButton
            android:id="@+id/wodexiaoxi_fanhui"
            android:layout_width="80dp"
            android:layout_height="fill_parent"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@drawable/wode_title_btn_selector"
            android:button="@null"
            android:drawableLeft="@drawable/fanhui"
            android:gravity="left|center_vertical"
            android:paddingLeft="5dp"
            android:textColor="#fbfdfc"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:gravity="center_horizontal"
            android:text="地址编辑"
            android:textColor="#fbfdfc"
            android:textSize="22sp" />
        
         <RadioButton
            android:id="@+id/baocun_button"
            android:button="@null"
            android:layout_marginTop="5dp"
             android:background="@drawable/wode_title_btn_selector"
            android:layout_width="80dp"
            android:textColor="#ffffff"
            android:layout_marginLeft="5dp"
            android:layout_height="fill_parent"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:textSize="20sp"
            android:paddingLeft="10dp"
            android:text="保存" />
        
        
        
        
        
        
        
        
        
    </RelativeLayout>
   
    

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
    
        android:orientation="horizontal" >
        <TextView android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="16sp"
            android:paddingLeft="15dp"
            android:gravity="center_vertical"
            android:text="姓名"/>
        <EditText android:layout_width="0dp"
            android:id="@+id/xingming_EditText"
            android:layout_height="match_parent"
            android:layout_marginRight="10dp"
            android:background="@null"
            android:hint="请输入收件人姓名"
            android:textColorHint="@color/base_bg_gray"
            android:layout_weight="4"/>  
        
    </LinearLayout>
    
     <TextView android:layout_width="match_parent"
            android:layout_marginLeft="15dp"
            android:layout_height="1dp"
            android:background="@color/base_bg_gray"/>
  
    
    
    
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
    
        android:orientation="horizontal" >
        <TextView android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            
            android:textSize="16sp"
           
           android:paddingLeft="15dp"
            android:gravity="center_vertical"
            android:text="电话"/>
        <EditText android:layout_width="0dp"
            android:phoneNumber="true"
            
              android:layout_marginRight="10dp"
             android:background="@null"
            android:id="@+id/dianhua_EditText"
            android:layout_height="match_parent"
            android:textColorHint="@color/base_bg_gray"
            android:hint="请输入收件人手机号"
            android:layout_weight="4"/>      
    </LinearLayout>
     
     <TextView android:layout_width="match_parent"
            android:layout_marginLeft="15dp"
            android:layout_height="1dp"
            android:background="@color/base_bg_gray"/>
  
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
      
        android:orientation="horizontal" >

        

        <TextView android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="16sp"
            
            android:paddingLeft="15dp"
            android:gravity="center_vertical"
            android:text="地区"/>

        
        
        
        <LinearLayout 
            
            android:layout_width="0dp"
            android:layout_weight="4"
            android:layout_height="match_parent"
           
            >
            
            
             <RadioButton
            
            android:id="@+id/diqu_spinner"
                  
            android:layout_width="wrap_content"
            android:background="@drawable/item_detail_bottom_layout_addcart_selector"
            android:button="@null"
            android:text="请选择地区"
          	android:layout_gravity="center_vertical"
            android:layout_height="wrap_content"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:textColor="@color/white"
    	 />
        </LinearLayout>
        
       
        
    </LinearLayout>
     <TextView android:layout_width="match_parent"
            android:layout_marginLeft="15dp"
            android:layout_height="1dp"
            android:background="@color/base_bg_gray"/>
  
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
     
        android:orientation="horizontal" >
        <TextView android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="16sp"
           
           android:paddingLeft="15dp"
            android:gravity="center_vertical"
            android:text="地址"/>
        <EditText android:layout_width="0dp"
              android:layout_marginRight="10dp"
             android:background="@null"
            android:id="@+id/dizhi_EditText"
            android:layout_height="match_parent"
            android:textColorHint="@color/base_bg_gray"
            android:hint="请输入区、街道(省市省略)"
            android:layout_weight="4"/>      
    </LinearLayout>
     <TextView android:layout_width="match_parent"
            android:layout_marginLeft="15dp"
            android:layout_height="1dp"
            android:background="@color/base_bg_gray"/>
  
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
     
        android:orientation="horizontal" >
        <TextView android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="16sp"
           
           android:paddingLeft="15dp"
            android:gravity="center_vertical"
            android:text="邮编"/>
        <EditText android:layout_width="0dp"
              android:layout_marginRight="10dp"
             android:background="@null"
            android:id="@+id/youbian_EditText"
            android:layout_height="match_parent"
             android:textColorHint="@color/base_bg_gray"
            android:hint="请输入邮编"
            android:layout_weight="4"/>      
    </LinearLayout>
 <TextView android:layout_width="match_parent"
            android:layout_marginLeft="15dp"
            android:layout_height="1dp"
            android:background="@color/base_bg_gray"/>
  
    
   
</LinearLayout>
